{
  "name": "offerbrite-be",
  "version": "0.0.1",
  "description": "Back end for Offerbrite React Native app",
  "main": "server/index.js",
  "engines": {
    "node": ">=8.10.0",
    "npm": ">=5.6.0",
    "yarn": ">=1.5.1"
  },
  "scripts": {
    "start": "NODE_ENV=production node ./server/index.js",
    "dev": "NODE_ENV=development DEBUG=app:* nodemon ./server/index.js",
    "debug": "NODE_ENV=development node --nolazy --inspect-brk=9229 ./server/index.js",
    "nodemon-debug": "NODE_ENV=development nodemon --inspect-brk=9229 ./server/index.js",
    "lint": "esw  . --color",
    "lint:watch": "yarn lint -- --watch",
    "test": "NODE_ENV=test ./node_modules/.bin/mocha --opts ./test/mocha.opts \"./server/**/*.test.js\" \"./image-cleaner/**/*.test.js\"",
    "test:watch": "yarn test -- --watch",
    "test:coverage": "NODE_ENV=test ./node_modules/.bin/istanbul cover ./node_modules/.bin/mocha -- --opts ./test/mocha.opts \"./server/**/*.test.js\" \"./image-cleaner/**/*.test.js\"",
    "start-cron": "NODE_ENV=production node ./cron/index.js",
    "dev-cron": "NODE_ENV=development DEBUG=app:* nodemon ./cron/index.js"
  },
  "dependencies": {
    "@google-cloud/storage": "^2.0.3",
    "bcrypt": "3.0.1",
    "bluebird": "^3.5.1",
    "body-parser": "1.18.3",
    "compression": "1.7.3",
    "cookie-parser": "1.4.3",
    "cors": "^2.8.4",
    "cron": "^1.4.1",
    "debug": "^4.0.1",
    "dotenv": "^6.0.0",
    "express": "4.16.3",
    "express-fileupload": "^1.0.0-alpha.1",
    "express-jwt": "5.3.1",
    "express-query-boolean": "2.0.0",
    "express-validation": "1.0.2",
    "express-winston": "3.0.0",
    "firebase-admin": "^6.4.0",
    "firebase-functions": "^2.0.5",
    "fs-extra": "^7.0.0",
    "google-libphonenumber": "^3.1.14",
    "googleapis": "^35.0.0",
    "helmet": "3.13.0",
    "http-status": "1.2.0",
    "is-jpg": "^2.0.0",
    "is-png": "^1.1.0",
    "joi": "^13.6.0",
    "jsonwebtoken": "8.3.0",
    "lodash": "4.17.11",
    "method-override": "^3.0.0",
    "moment": "^2.22.2",
    "mongodb": "3.1.6",
    "mongoose": "5.2.17",
    "mongoose-geojson-schema": "^2.1.3",
    "mongoose-paginate": "5.0.3",
    "morgan": "1.9.1",
    "multer": "^1.4.0",
    "node-fetch": "^2.3.0",
    "nodemailer": "^4.6.8",
    "passport": "0.4.0",
    "passport-http": "0.3.0",
    "passport-jwt": "4.0.0",
    "pug": "^2.0.3",
    "query-string": "^6.1.0",
    "read-chunk": "^3.0.0",
    "redis": "^2.8.0",
    "request-promise": "^4.2.2",
    "serve-favicon": "^2.5.0",
    "supertest": "^3.3.0",
    "url-parse": "^1.4.3",
    "uuid": "^3.3.2",
    "validator": "10.8.0",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "chai": "4.2.0",
    "commitizen": "^2.9.6",
    "coveralls": "^3.0.0",
    "cross-env": "5.2.0",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.6.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-watch": "4.0.2",
    "faker": "^4.1.0",
    "flat": "^4.1.0",
    "husky": "1.0.0",
    "istanbul": "1.1.0-alpha.1",
    "mocha": "5.2.0",
    "mocha-clean": "1.0.0",
    "nodemon": "^1.17.5",
    "validate-commit-msg": "^2.14.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn lint && yarn test"
    }
  }
}
